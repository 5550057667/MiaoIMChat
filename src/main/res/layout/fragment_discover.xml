<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_friend_group"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/v2"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="朋友圈"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_scan_code"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_saoyisao"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="扫一扫"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_rock"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_yao"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="摇一摇"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_nearby"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_nearby"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="附近的人"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_drift_bottle"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_ping"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="漂流瓶"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_shopping"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_shop"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="购物"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/tv_game"
                style="@style/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_profile_item"
                android:drawableLeft="@drawable/icon_de_game"
                android:drawableRight="@drawable/right"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="游戏"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>